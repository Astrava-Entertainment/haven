{
  "name": "@astrava/design-system",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "style": "./dist/tailwind.css",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build",
    "css-compile": "tailwindcss -i ./css/base.css -o ./dist/tailwind.css --minify",
    "css-watch": "tailwindcss -i ./css/base.css -o ./dist/tailwind.css --watch",
    "dev": "echo 'No dev script needed for design-system'"
  },
  "dependencies": {
    "tailwindcss": "^3.0.0",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0"
  }
}

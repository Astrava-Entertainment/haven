{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": [
        "./lib/*"
      ],
      "@": [
        "./lib"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "lib",
    "types",
    "*.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "env.d.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src-tauri",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "../file-system"
    },
    {
      "path": "../render"
    },
    {
      "path": "../design-system"
    },
    {
      "path": "../../examples"
    },
    {
      "path": "../types"
    }
  ]
}

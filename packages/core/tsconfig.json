{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src", // Solo apunta a tu propio c√≥digo fuente
    "outDir": "dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".", // opcional
    "paths": {
      "@file-system/*": [
        "../../file-system/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../file-system"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

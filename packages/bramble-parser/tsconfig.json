{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "test/**/*.ts"
  ]
}

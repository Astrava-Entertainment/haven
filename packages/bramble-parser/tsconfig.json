{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "strict": true,
    "types": [],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "test/**/*.ts"
  ]
}

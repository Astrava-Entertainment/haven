{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolvePackageJsonImports": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@haven/core": [
        "packages/core/src"
      ],
      "@haven/core/*": [
        "packages/core/src/*"
      ],
      "@haven/file-system": [
        "packages/file-system/src"
      ],
      "@haven/file-system/*": [
        "packages/file-system/src/*"
      ],
      "@haven/render": [
        "packages/render/src"
      ],
      "@haven/render/*": [
        "packages/render/src/*"
      ],
      "@haven/examples": [
        "examples"
      ],
      "@haven/examples/*": [
        "examples/*"
      ],
      "@haven/design-system": [
        "packages/design-system"
      ],
      "@haven/design-system/*": [
        "packages/design-system/*"
      ],
      "@haven/types": [
        "packages/types"
      ],
      "@haven/types/*": [
        "packages/types/*"
      ]
    },
    "typeRoots": [
      "packages/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}

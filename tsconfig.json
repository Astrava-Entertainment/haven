{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@astrava/design-system/*": [
        "./packages/design-system/src/*"
      ],
      "@astrava/design-system": [
        "./packages/design-system"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
